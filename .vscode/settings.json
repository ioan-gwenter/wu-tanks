{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "eslint.validate": [
    "javascript"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "files.exclude": {
    ".eslintignore": true,
    ".eslintrc": true,
    ".git": true,
    ".next": true,
    ".prettierignore": true,
    ".prettierrc": true,
    ".vscode": true,
    "LICENSE": true,
    "next-env.d.ts": true,
    "next.config.js": true,
    "node_modules": true,
    "package-lock.json": true,
    "postcss.config.js": true,
    "sandbox.config.json": true,
    "tailwind.config.js": true,
    "tsconfig.json": true,
    "yarn.lock": true,
    ".editorconfig": true,
    "package.json": true,
    ".gitignore": true
  }
}